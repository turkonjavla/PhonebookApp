<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h4 class="text-center display-4 pt-4 wow fadeIn" data-wow-delay="0.1s">Phone Book</h4>
      <form action="/" method="GET" class="form-inline md-form justify-content-center wow fadeIn" data-wow-delay="0.3s">
          <input class="form-control mr-sm-2" type="text" name="search" placeholder="Search by last name" aria-label="Search">
          <button class="btn btn-indigo btn-sm my-0" type="submit">Search</button>
          <a href="/" class="btn btn-outline-indigo waves-effect btn-sm my-0">Clear</a>
      </form>
      <!--Table-->
      <table class="table table-hover hoverable wow fadeIn" data-wow-delay="0.5s">
        <!--Table head-->
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Action</th>
          </tr>
        </thead>

        <!--Table body-->
        <tbody>
          {{#each contacts}}
          <tr class="wow fadeIn">
            <td>{{ firstName }}</td>
            <td>{{ lastName }}</td>
            <td>{{ phoneNumber }}</td>
            <td>
              <form action="/{{id}}?_method=delete" method="POST">
                <button type="submit" class="btn btn-sm btn-red">Remove <i class="fas fa-trash"></i></button>
              </form>
            </td>
          </tr>
          {{else}}
          <p class="lead text-center">No contacts found</p>
          {{/each}}
        </tbody>
      </table>
      <div class="text-center">
        <a href="/new" class="btn btn-sm btn-indigo wow fadeIn" data-wow-delay="0.7s">Add new contact <i class="fa fa-plus"></i></a>
      </div>
    </div>
  </div>
</div>